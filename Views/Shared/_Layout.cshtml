<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/Logo_Ex.ico" />

    <title>@ViewBag.Title - Nakaraks</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-primary">
            <a class="navbar-brand" href="#"><img src="~/Images/Logo_Ex_36.png" /></a>
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item font-weight-bold">
                        <a class="nav-link text-white" href="#">HOME <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">RECORD</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">APPOINTMENT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">DAGNOSIS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">PHARMACY</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">FINANCIAL</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">LOCATION</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">CONTRACT</a>
                    </li>
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2 form-rounded" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-link my-2 my-sm-0 shadow-none" type="submit"><i class="fa fa-search text-white"></i></button>
                </form>
            </div>
        </nav>
    </header>
    <div class="body-content" style="margin-top:70px;">
        @RenderBody()
        <hr />
        <footer class="footer">
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
            <div class="row">
                <div class="col-lg-1 col-4 text-right">CONTACT US</div>
                <div class="col-lg-2 col-8"> +665 4591 7878 <br /> contactus@h2cplatform.com</div>
                <div class="col-lg-1 col-4 text-right">SERVICES</div>
                <div class="col-lg-2 col-8"> Member <br /> Appointment <br /> Location</div>
                <div class="col-lg-1 col-4 text-right">INFORMATION</div>
                <div class="col-lg-2 col-8"> About Nakaraks <br /> Privicy Policy <br /> Term Condition</div>
                <div class="col-lg-1 col-4 text-right"></div>
                <div class="col-lg-2 col-8"> 
                    <img src="~/Images/line.png" class="mr-3" style="margin-top:-8px; color:white;" />
                    <i class="fa fa-instagram mr-3" style="font-size: 28px;"></i>  
                    <i class="fa fa-twitter mr-3" style="font-size: 28px;"></i> 
                    <i class="fa fa-facebook mr-3" style="font-size: 28px;"></i>
                    <br /> <p>H2O Solution House 2020</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
